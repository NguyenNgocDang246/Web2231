{{> Nav user=user}}

<style>
    /* Styles for the page */
    .comment {
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
        margin-bottom: 10px;
    }

    .comment-author {
        font-weight: bold;
        color: #007bff;
    }

    .comment-time {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .comment-text {
        margin: 5px 0 0;
    }
</style>

<!-- Product Details Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Product Image -->
            <div class="col-md-6">
                <img src="{{index product.image 0}}" alt="Product Image" class="img-fluid rounded">
            </div>

            <!-- Product Info + Specifications -->
            <div class="col-md-6">
                <div class="card-body">
                    <h2 id="productName">{{product.name}}</h2>
                    <p class="text-muted" id="productCategory">Category:
                        {{#each product.categoryNames}}
                        {{this}}{{#unless @last}}, {{/unless}}
                        {{/each}}
                    </p>
                    <p id="productDescription">
                        {{product.description}}
                    </p>
                    <h4 class="fw-bold"><span id="productPrice">{{product.price}} đ</span></h4>

                    <div class="d-flex align-items-center justify-content-between">
                        <!-- Add to Cart -->
                        <label for="quantity" class="me-2">Quantity:</label>
                        <input type="number" id="quantityInput" class="form-control w-25" value="1" min="1">
                        <button class="btn btn-primary me-4 fw-bold" id="addToCartBtn">Add to Cart</button>

                        <!-- Share -->
                        <button class="btn btn-outline-secondary" id="shareProductBtn">Share</button>
                    </div>


                </div>

                <!-- Horizontal Rule (divider) -->
                <hr class="my-4">

                <!-- Specifications Section -->
                <div class="mt-4">
                    <h3>Specifications</h3>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Brand: {{product.brandNames}}</li>
                        <li class="list-group-item">Available Sizes:
                            {{#each product.size}}
                            {{this}} {{#unless @last}}, {{/unless}}
                            {{/each}}
                        </li>
                        <li class="list-group-item">Color:
                            {{#each product.colors}}
                            {{this}} {{#unless @last}}, {{/unless}}
                            {{/each}}
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Related Products Section -->
        <div class="mt-5">
            <h3>Related Products</h3>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {{#if relatedProducts.length}}
                {{#each relatedProducts}}
                <div class="col">
                    <div class="card h-100" id="relatedProduct{{this._id}}">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text text-muted">Price: {{this.price}} đ</p>
                            <a href="/product/id={{this._id}}" class="btn btn-primary">View Product</a>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="col">
                    <p>No related products found.</p>
                </div>
                {{/if}}
            </div>
        </div>

        <!-- Comments Section -->
        <div class="mt-5">
            <h3>Comments</h3>

            <!-- Add Comment Form -->
            <form id="commentForm" class="mb-4">
                <div class="mb-3">
                    <label for="ratingInput" class="form-label">Your Rating</label>
                    <select id="ratingInput" class="form-select" required>
                        <option value="" disabled selected>Select your rating</option>
                        <option value="5">5 - Excellent</option>
                        <option value="4">4 - Very Good</option>
                        <option value="3">3 - Good</option>
                        <option value="2">2 - Fair</option>
                        <option value="1">1 - Poor</option>
                    </select>
                </div>

                <div class="mb-3">
                    <textarea id="commentInput" class="form-control" rows="3" placeholder="Write your comment..."
                        required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit Comment</button>
            </form>

            <!-- Comments List -->
            <div id="commentsList">
                {{#each reviews}}
                <div class="card my-3">
                    <div class="card-body">
                        <h5 class="card-title">{{this.userName}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            Rating:
                            <span class="badge bg-success">{{this.rating}}/5</span>
                        </h6>
                        <p class="card-text">{{this.comment}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>

{{> Footer}}

<script>
    $(document).ready(function () {
        // Add to Cart functionality
        $('#addToCartBtn').on('click', function () {
            const productId = "{{product._id}}"; // Assuming product._id is available
            const quantity = $('#quantityInput').val();; // Default quantity, can be modified if needed

            $.ajax({
                url: '/cart/add',
                method: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function (response) {
                    alert('Product added to cart successfully!');
                },
                error: function () {
                    alert('Error adding product to cart.');
                }
            });
        });

        // Share Product functionality (copy to clipboard)
        $('#shareProductBtn').on('click', function () {
            const productLink = window.location.href;

            // Copy link to clipboard
            navigator.clipboard.writeText(productLink).then(() => {
                alert('Product link copied to clipboard! Now you can paste it anywhere.');
            }).catch(err => {
                alert('Failed to copy the product link.');
                console.error('Clipboard error:', err);
            });
        });

        // Add Comment functionality
        $('#commentForm').on('submit', function (e) {
            e.preventDefault();

            const rating = $('#ratingInput').val();
            const comment = $('#commentInput').val().trim();

            if (rating && comment) {
                $.ajax({
                    url: '/product/comment',
                    method: 'POST',
                    data: {
                        productID: "{{product._id}}", // Assuming product._id is available
                        rating: rating,
                        comment: comment
                    },
                    success: function (response) {
                        if (!response.comment) {
                            alert('You need to login to comment.');
                            window.location.href = '/page/login';
                            return;
                        }
                        const newComment = `
                        <div class="card my-3">
                            <div class="card-body">
                                <h5 class="card-title">${response.comment.userName}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    Rating: <span class="badge bg-success">${response.comment.rating}/5</span>
                                </h6>
                                <p class="card-text">${response.comment.comment}</p>
                            </div>
                        </div>
                    `;
                        $('#commentsList').prepend(newComment);
                        $('#commentInput').val('');
                        $('#ratingInput').val('');
                    },
                    error: function () {
                        alert('Error submitting comment.');
                    }
                });
            } else {
                alert('Please fill out both fields.');
            }
        });
    });

</script>