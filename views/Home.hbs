{{> Nav user=user}}

<!-- Main Content -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- Sidebar for Filter -->
            <div class="col-md-3">
                <h5>Filter Products</h5>
                <form id="filterForm">
                    <!-- Price Range -->
                    <div class="mb-3">
                        <label for="priceRange" class="form-label">Price Range</label>
                        <div class="d-flex">
                            <input type="number" class="form-control" id="minPrice" placeholder="Min Price" min="0">
                            <span class="mx-2">-</span>
                            <input type="number" class="form-control" id="maxPrice" placeholder="Max Price" min="0">
                        </div>
                        <small>Enter a price range (e.g., 0 - 100)</small>
                    </div>
                    <!-- Category Filter -->
                    <div class="mb-3">
                        <label for="categoryFilter" class="form-label">Category</label>
                        <select class="form-select" id="categoryFilter">
                            <option value="">All Categories</option>
                            <option value="shirts">Shirts</option>
                            <option value="pants">Pants</option>
                            <option value="accessories">Accessories</option>
                        </select>
                    </div>
                    <!-- Sort By -->
                    <div class="mb-3">
                        <label for="sortBy" class="form-label">Sort By</label>
                        <select class="form-select" id="sortBy">
                            <option value="price-low-to-high">Price: Low to High</option>
                            <option value="price-high-to-low">Price: High to Low</option>
                            <option value="newest">Newest</option>
                        </select>
                    </div>
                    <!-- Confirm Button -->
                    <button type="submit" class="btn btn-primary">Confirm Filter</button>
                </form>
            </div>

            <!-- Products Section -->
            <div class="col-md-9">
                <!-- Search Bar -->
                <div class="mb-4">
                    <input type="text" class="form-control" placeholder="Search for items..."
                        aria-label="Search for items">
                </div>

                <div class="row g-4" id="products">
                    <!-- Product 1 -->
                    <div class="col-md-4">
                        <a href="/product/id=1">
                            <div class="card">
                                <img src="https://product.hstatic.net/200000037048/product/hq_caro_do_a6696aa29b8e4c2085d99d0adde9ef51_master.jpg"
                                    class="card-img-top" alt="Product 1">
                                <div class="card-body">
                                    <h5 class="card-title">T-Shirt</h5>
                                    <p class="card-text">$25.00</p>
                                </div>
                            </div>
                        </a>

                    </div>
                    <!-- Product 2 -->
                    <div class="col-md-4">
                        <div class="card">
                            <img src="product2.jpg" class="card-img-top" alt="Product 2">
                            <div class="card-body">
                                <h5 class="card-title">Jeans</h5>
                                <p class="card-text">$40.00</p>
                                <button class="btn btn-primary add-to-cart" data-product-id="2">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                    <!-- Product 3 -->
                    <div class="col-md-4">
                        <div class="card">
                            <img src="product3.jpg" class="card-img-top" alt="Product 3">
                            <div class="card-body">
                                <h5 class="card-title">Sunglasses</h5>
                                <p class="card-text">$15.00</p>
                                <button class="btn btn-primary add-to-cart" data-product-id="3">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                    <!-- Product 4 -->
                    <div class="col-md-4">
                        <div class="card">
                            <img src="product4.jpg" class="card-img-top" alt="Product 4">
                            <div class="card-body">
                                <h5 class="card-title">Hats</h5>
                                <p class="card-text">$20.00</p>
                                <button class="btn btn-primary add-to-cart" data-product-id="4">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                    <!-- Product 5 -->
                    <div class="col-md-4">
                        <div class="card">
                            <img src="product5.jpg" class="card-img-top" alt="Product 5">
                            <div class="card-body">
                                <h5 class="card-title">Sweater</h5>
                                <p class="card-text">$50.00</p>
                                <button class="btn btn-primary add-to-cart" data-product-id="5">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                    <!-- Product 6 -->
                    <div class="col-md-4">
                        <div class="card">
                            <img src="product6.jpg" class="card-img-top" alt="Product 6">
                            <div class="card-body">
                                <h5 class="card-title">Jacket</h5>
                                <p class="card-text">$75.00</p>
                                <button class="btn btn-primary add-to-cart" data-product-id="6">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mt-4">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-white py-3">
    <div class="container text-center">
        <p>&copy; 2024 Clothing Shop. All Rights Reserved.</p>
    </div>
</footer>

<!-- Script to handle Cart Count -->
<script>
    let cartCount = 0;

    // Add to Cart functionality
    $('.add-to-cart').on('click', function () {
        cartCount++;
        $('#cart-count').text(cartCount);
    });
</script>